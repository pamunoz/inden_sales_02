<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="MainTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimaryDark">@color/mainThemePDC</item>
        <item name="colorPrimary">@color/mainThemePC</item>
        <item name="colorAccent">@color/mainThemeAC</item>
    </style>

    <style name="SalesTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimaryDark">@color/salesThemePDC</item>
        <item name="colorPrimary">@color/salesThemePC</item>
        <item name="colorAccent">@color/salesThemeAC</item>
    </style>

    <style name="AddressTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimaryDark">@color/addressThemePDC</item>
        <item name="colorPrimary">@color/addressThemePC</item>
        <item name="colorAccent">@color/addressThemeAC</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="EditUserTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimaryDark">@color/editUserThemePDC</item>
        <item name="colorPrimary">@color/editUserThemePC</item>
    </style>

    <style name="ArticlesInSaleTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimaryDark">@color/articlesInSaleThemePDC</item>
        <item name="colorPrimary">@color/articlesInSaleThemePC</item>
        <item name="colorAccent">@color/articlesInSaleThemeAC</item>
    </style>

    <style name="AddClientsTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimaryDark">@color/addClientsThemePDC</item>
        <item name="colorPrimary">@color/addClientsThemePC</item>
        <item name="colorAccent">@color/addClientsThemeAC</item>
    </style>



    <style name="InputText">
        <item name="android:layout_marginRight">@dimen/common_wide_margin</item>
        <item name="android:layout_marginLeft">@dimen/common_wide_margin</item>
        <item name="android:layout_marginBottom">@dimen/common_tiny_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/common_wide_margin</item>
        <item name="android:paddingLeft">@dimen/common_wide_margin</item>
        <item name="android:textColor">@color/color_dark_grey_primary</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="quantityBtn">
        <item name="android:scaleX">1.5</item>
        <item name="android:scaleY">1.5</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/none_dimen</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="darkIcon">
        <item name="android:layout_width">@dimen/dimen_icon</item>
        <item name="android:layout_height">@dimen/dimen_icon</item>
        <item name="android:tint">@color/color_dark_grey_primary</item>
    </style>

    <style name="wideHMargin">
        <item name="android:layout_marginRight">@dimen/common_wide_margin</item>
        <item name="android:layout_marginLeft">@dimen/common_wide_margin</item>
    </style>

    <style name="narrowCardViewMargin">
        <item name="android:layout_marginRight">@dimen/common_narrow_margin</item>
        <item name="android:layout_marginLeft">@dimen/common_narrow_margin</item>
        <item name="android:layout_marginTop">@dimen/common_tiny_margin</item>
        <item name="android:layout_marginBottom">@dimen/common_tiny_margin</item>
    </style>
    
</resources>
