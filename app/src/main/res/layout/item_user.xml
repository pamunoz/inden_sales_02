<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:contentPadding="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <LinearLayout
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imv_user_profile_pic"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:src="@drawable/com_facebook_profile_picture_blank_square"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/tw__transparent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginRight="16dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_user_name"
                    tools:text="Pablo Farias MuÃ±oz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_user_rut"
                    tools:text="15663392-7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_user_email"
                    tools:text="pfariasmunoz@gmail.com"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_user_phone"
                    tools:text="94062006"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:gravity="fill_horizontal"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_user_rol"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                tools:text="Administrador"
                android:textAllCaps="true"
                android:layout_gravity="center_vertical|left"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"/>

            <Button
                android:id="@+id/bt_add_clients"
                android:layout_weight="3"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:maxLines="2"
                android:textColor="@color/colorAccent"
                style="?android:attr/borderlessButtonStyle"
                android:gravity="end"
                android:text="add clients"/>
        </LinearLayout>


    </LinearLayout>



</android.support.v7.widget.CardView>