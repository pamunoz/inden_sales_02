<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    style="@style/narrowCardViewMargin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/common_tiny_margin"
    card_view:contentPadding="@dimen/common_narrow_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imv_user_profile_pic"
            style="@style/wideHMargin"
            android:layout_width="60dp"
            android:layout_height="61dp"
            android:layout_marginStart="16dp"
            app:civ_border_color="@color/transparent"
            app:civ_border_width="2dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="126dp"
            android:layout_height="23dp"
            android:textColor="@color/color_dark_grey_primary"
            tools:text="Pablo Farias MuÃ±oz"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_user_rut"
            android:layout_marginLeft="0dp"/>

        <TextView
            android:id="@+id/tv_user_rut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/color_light_grey_primary"
            tools:text="15663392-7"
            tools:layout_editor_absoluteY="43dp"
            tools:layout_editor_absoluteX="85dp"/>

        <ImageView
            android:id="@+id/img_user_email"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:tint="@color/color_dark_grey_primary"
            app:srcCompat="@drawable/ic_email_black_24dp"
            tools:layout_editor_absoluteY="146dp"
            tools:layout_editor_absoluteX="148dp"/>

        <TextView
            android:id="@+id/tv_user_email"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:textColor="@color/colorPrimaryLight"
            tools:layout_editor_absoluteY="145dp"
            tools:text="pfariasmunoz@gmail.com"
            tools:layout_editor_absoluteX="164dp"/>

        <ImageView
            android:id="@+id/img_user_phone"
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:srcCompat="@drawable/ic_phone_black_24px"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="174dp"/>

        <TextView
            android:id="@+id/tv_user_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="94062006"
            tools:layout_editor_absoluteY="177dp"
            tools:layout_editor_absoluteX="171dp"/>

        <TextView
            android:id="@+id/tv_user_rol"
            android:layout_width="126dp"
            android:layout_height="40dp"
            android:textAllCaps="true"
            android:textColor="@color/color_dark_grey_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Administrador"
            tools:layout_editor_absoluteY="177dp"
            tools:layout_editor_absoluteX="16dp"/>

        <ImageButton
            android:id="@+id/imb_edit_user"
            style="@style/darkIcon"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:paddingBottom="@dimen/common_narrow_margin"
            android:paddingEnd="@dimen/common_wide_margin"
            android:paddingLeft="@dimen/common_wide_margin"
            android:paddingRight="@dimen/common_wide_margin"
            android:paddingStart="@dimen/common_wide_margin"
            android:paddingTop="@dimen/common_wide_margin"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:srcCompat="@drawable/ic_edit_black_24dp"
            tools:layout_editor_absoluteY="170dp"
            tools:layout_editor_absoluteX="150dp"/>

        <Button
            android:id="@+id/bt_add_clients"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="109dp"
            android:layout_height="48dp"
            android:gravity="bottom"
            android:maxLines="2"
            android:text="@string/add_clients_to_user"
            android:textColor="@color/mainThemeAC"
            tools:layout_editor_absoluteY="183dp"
            tools:layout_editor_absoluteX="243dp"/>

        <ImageButton
            android:id="@+id/ib_popup_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@null"
            app:srcCompat="@drawable/ic_more_vert_black_24dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>