<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:contentPadding="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <LinearLayout
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imv_user_profile_pic"
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/tw__transparent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginRight="16dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:textColor="@color/color_dark_grey_primary"
                    tools:text="Pablo Farias MuÃ±oz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_user_rut"
                    android:textColor="@color/color_light_grey_primary"
                    tools:text="15663392-7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="0.9"
                        android:scaleY="0.9"
                        android:tint="@color/color_dark_grey_primary"
                        android:src="@drawable/ic_email_black_24dp"/>
                    <TextView
                        android:id="@+id/tv_user_email"
                        tools:text="pfariasmunoz@gmail.com"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/colorPrimaryLight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="0.9"
                        android:scaleY="0.9"
                        android:tint="@color/color_dark_grey_primary"
                        android:src="@drawable/ic_phone_black_24px"/>
                    <TextView
                        android:id="@+id/tv_user_phone"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        tools:text="94062006"
                        android:layout_gravity="center_vertical|start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


            </LinearLayout>
            <ImageButton
                android:id="@+id/imb_edit_user"
                android:src="@drawable/ic_edit_black_24dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/tw__transparent"
                android:tint="@color/color_dark_grey_primary"
                android:layout_height="match_parent"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:gravity="fill_horizontal"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_user_rol"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                tools:text="Administrador"
                android:textColor="@color/color_dark_grey_primary"
                android:textAllCaps="true"
                android:layout_gravity="center_vertical|start"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"/>

            <Button
                android:id="@+id/bt_add_clients"
                android:layout_weight="3"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:maxLines="2"
                android:textColor="@color/colorAccent"
                style="?android:attr/borderlessButtonStyle"
                android:gravity="end"
                android:text="add clients"/>
        </LinearLayout>


    </LinearLayout>



</android.support.v7.widget.CardView>