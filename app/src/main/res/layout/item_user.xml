<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    style="@style/narrowCardViewMargin"
    card_view:cardCornerRadius="4dp"
    card_view:contentPadding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imv_user_profile_pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="8dp"
            style="@style/wideHMargin"
            app:civ_border_color="@color/transparent"
            app:civ_border_width="2dp"/>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imv_user_profile_pic"
            android:layout_toRightOf="@+id/imv_user_profile_pic"
            android:textColor="@color/color_dark_grey_primary"
            tools:text="Pablo Farias MuÃ±oz"/>
        <TextView
            android:id="@+id/tv_user_rut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_user_name"
            android:layout_toEndOf="@+id/imv_user_profile_pic"
            android:layout_toRightOf="@+id/imv_user_profile_pic"
            android:textColor="@color/color_light_grey_primary"
            tools:text="15663392-7"/>

        <ImageView
            android:id="@+id/img_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_user_rut"
            android:layout_toEndOf="@+id/imv_user_profile_pic"
            android:layout_toRightOf="@+id/imv_user_profile_pic"
            android:src="@drawable/ic_email_black_24dp"
            android:tint="@color/color_dark_grey_primary"/>
        <TextView
            android:id="@+id/tv_user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_user_rut"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/img_user_email"
            android:layout_toRightOf="@+id/img_user_email"
            android:textColor="@color/colorPrimaryLight"
            tools:text="pfariasmunoz@gmail.com"/>

        <ImageView
            android:id="@+id/img_user_phone"
            style="@style/darkIcon"
            android:layout_below="@+id/img_user_email"
            android:layout_toEndOf="@+id/imv_user_profile_pic"
            android:layout_toRightOf="@+id/imv_user_profile_pic"
            android:src="@drawable/ic_phone_black_24px"/>
        <TextView
            android:id="@+id/tv_user_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_user_email"
            android:layout_gravity="center_vertical|start"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/common_tiny_margin"
            android:layout_toEndOf="@+id/img_user_phone"
            android:layout_toRightOf="@+id/img_user_phone"
            tools:text="94062006"/>



        <TextView
            android:id="@+id/tv_user_rol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical|start"
            android:layout_marginTop="@dimen/common_narrow_margin"
            android:layout_marginLeft="@dimen/common_wide_margin"
            android:layout_marginStart="@dimen/common_wide_margin"
            android:layout_marginRight="@dimen/common_wide_margin"
            android:layout_marginEnd="@dimen/common_wide_margin"
            android:textAllCaps="true"
            android:textColor="@color/color_dark_grey_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Administrador"/>

        <ImageButton
            android:id="@+id/imb_edit_user"
            style="@style/darkIcon"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/tv_user_rol"
            android:layout_toRightOf="@+id/tv_user_rol"
            android:background="@color/transparent"
            android:src="@drawable/ic_edit_black_24dp"
            android:paddingRight="@dimen/large"
            android:paddingEnd="@dimen/large"
            android:paddingLeft="@dimen/large"
            android:paddingStart="@dimen/large"/>

        <Button
            android:id="@+id/bt_add_clients"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:gravity="bottom"
            android:maxLines="2"
            android:text="@string/add_clients_to_user"
            android:textColor="@color/mainThemeAC"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>