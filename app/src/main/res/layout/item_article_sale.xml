<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    card_view:cardCornerRadius="2dp"
    card_view:contentPadding="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="12"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_article_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/color_dark_grey_primary"
                android:maxLines="2"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:ellipsize="end"
                android:text="DESCRIPCION"
                />
            <View
                android:background="@color/tw__composer_light_gray"
                android:layout_width="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="5.1"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:paddingEnd="8dp"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp"
                    android:paddingStart="8dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="center">

                    <ImageView

                        android:id="@+id/iv_article_image"
                        android:layout_width="50dp"
                        android:layout_height="42dp"
                        android:layout_gravity="center|bottom"
                        android:src="@drawable/ic_bar_code"
                        android:tint="@color/color_dark_grey_primary"/>
                    <TextView
                        android:id="@+id/tv_article_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:background="@drawable/barcode4"
                        android:textSize="12sp"
                        android:gravity="center|top"
                        android:textColor="@color/color_dark_grey_primary"
                        android:text="not available"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_article_price"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:maxLines="1"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@android:color/holo_red_dark"
                    tools:text="$16.000"
                    />

                <LinearLayout
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/tv_label_article_total_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:paddingTop="8dp"
                        android:text="@string/total_article_price"
                        android:textColor="@color/color_light_grey_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_article_total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textSize="18sp"
                        android:textColor="@color/color_light_grey_primary"
                        android:layout_gravity="center"
                        tools:text="$120.000"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_article_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="20sp"
            android:paddingEnd="8dp"
            android:textColor="@color/color_dark_grey_primary"
            android:paddingRight="8dp"
            android:paddingStart="4dp"
            android:layout_marginRight="0dp"
            android:layout_marginEnd="0dp"
            android:paddingLeft="4dp"
            android:gravity="center|end"
            android:layout_gravity="center"
            tools:text="0"/>
        <LinearLayout

            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center|start"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imb_up_arrow"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:paddingBottom="4dp"
                android:paddingTop="16dp"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"
                android:paddingStart="12dp"
                android:paddingLeft="12dp"
                android:layout_marginBottom="2dp"
                android:tint="@color/tint_button_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_arrow_up_white_24px"
                android:background="@color/tw__transparent"/>

            <ImageButton
                android:id="@+id/imb_down_arrow"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_marginTop="2dp"
                android:paddingTop="10dp"
                android:paddingEnd="20dp"
                android:paddingRight="20dp"
                android:paddingStart="12dp"
                android:paddingLeft="12dp"
                android:paddingBottom="18dp"
                android:tint="@color/tint_button_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/tw__transparent"
                android:src="@drawable/ic_keyboard_arrow_down_white_24px"/>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>



