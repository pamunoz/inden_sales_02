<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#8edef9">
    <ImageView
        android:id="@+id/img_no_client_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="4"
        android:scaleY="4"
        android:layout_centerInParent="true"
        android:padding="@dimen/common_wide_margin"
        android:tint="@color/white"
        app:srcCompat="@drawable/ic_notfoundp"
        />
    <TextView
        android:layout_below="@+id/img_no_client_icon"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/common_wide_margin"
        android:layout_height="wrap_content"
        tools:text="No client found"
        android:textSize="22sp"
        android:textStyle="italic"
        android:textColor="@color/red"
        android:paddingTop="@dimen/common_wide_margin"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>